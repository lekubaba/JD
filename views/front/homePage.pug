doctype html
html(lang="en")
	include files/head.pug
	body
		div.container
			div.header
				div.header-a
					a.header-a-a(href="/home")
						img(src="/images/xiaohongxian.png", alt="logo")
					div.header-a-c
						a.header-a-d(href="/see/message" class="iconfont5 icon-tixing" style="color:#8590a6")
							if count>0
								span.header-a-d-txt
						a.header-a-b(href="#")
							img(src=avatarUrl)
			div.content
				div.content-content
					div.nav-sub
						div.nav-sub-list
							div.nav-sub-items(class="iconfont icon-sites") 全国
							div.nav-sub-items(class="iconfont icon-zuixin") 最新
						div.nav-sub-change(class="iconfont-s icon-sites") 切换城市
					- var values = [].concat(ret)
					each item in values
						a.content-list
							div.content-list-a
								img(src=item.avatarUrl)
								span.content-list-a-text-a #{item.nickName}
								span.content-list-a-text ·
								span.content-list-a-text #{item.time}
							div.content-list-b #{item.title}
							div.content-list-c #{item.lead}
							div.content-list-d
								span.content-list-d-a #{item.zanNum}  赞
								span.content-list-d-a #{item.kanNum}  浏览
				div.content-side
					div.nav-main
						a.nav-main-list(class="main-a")
							div(class="iconfont1 icon-xiezuo")
							div.nav-fontsize 写文章
						a.nav-main-list(href='/article/manage' target='_blank')
							div(class="iconfont2 icon-finishing")
							div.nav-fontsize 文章管理
						a.nav-main-list(href='/column' target='_blank')
							div(class="iconfont3 icon-chuangjian1")
							div.nav-fontsize 创建专栏
						a.nav-main-list(href="/column/manage" target='_blank')
							div(class="iconfont4 icon-shezhi")
							div.nav-fontsize 专栏管理
					div.nav-user
						div.nav-user-list
							div(class="iconfonta icon-wenzhang")
							div.nav-user-fontsize 我的文章
						div.nav-user-list
							div(class="iconfonta icon-shoucang")
							div.nav-user-fontsize 我的收藏
						div.nav-user-list
							div(class="iconfonta icon-follow")
							div.nav-user-fontsize 我的关注
						div.nav-user-list
							div(class="iconfonta icon-followme")
							div.nav-user-fontsize 关注我的
					div.nav-footer
						span Copyright © 2018    湘ICP备17023660号-1
						span 小红线-信贷员聚集地
		div(class="mask" style="display: none;")
	script(src='/scripts/jquery.min.js')
	script(src='/scripts/homePage.js')
